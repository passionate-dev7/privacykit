{
  "name": "privacykit-arcium-local",
  "version": "0.1.0",
  "description": "Local Arcium cluster setup for PrivacyKit SDK development and testing",
  "license": "MIT",
  "scripts": {
    "setup": "./scripts/setup.sh",
    "start": "./scripts/start-cluster.sh",
    "stop": "./scripts/stop-cluster.sh",
    "restart": "./scripts/stop-cluster.sh && ./scripts/start-cluster.sh",
    "status": "./scripts/status.sh",
    "test": "yarn run ts-mocha -p ./tsconfig.json -t 1000000 tests/**/*.ts",
    "build": "arcium build",
    "clean": "./scripts/clean.sh",
    "logs": "docker-compose logs -f",
    "lint:fix": "prettier -w \"**/*.{js,ts}\"",
    "lint": "prettier --check \"**/*.{js,ts}\""
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@arcium-hq/client": "^0.6.3",
    "@arcium-hq/reader": "^0.6.0",
    "@solana/web3.js": "^1.95.0"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.7.3"
  }
}
