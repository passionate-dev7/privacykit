{
  "name": "@privacykit/react",
  "version": "0.1.0",
  "description": "React hooks and components for PrivacyKit",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "privacykit-sdk": "*"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20.10.0",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.18",
    "eslint": "^8.55.0",
    "happy-dom": "^20.4.0",
    "jsdom": "^27.4.0",
    "react-dom": "18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@solana/wallet-adapter-react": "^0.15.0",
    "@solana/web3.js": "^1.90.0",
    "react": "18.2.0"
  },
  "keywords": [
    "solana",
    "privacy",
    "react",
    "hooks",
    "privacykit",
    "wallet"
  ],
  "license": "MIT",
  "author": "PrivacyKit Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/privacykit/privacykit.git",
    "directory": "packages/react"
  }
}